<?xml version="1.0" encoding="utf-8"?>
<com.dgse.my_rib_app.root.intro.IntroView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/intro_root"
    android:background="@color/colorPrimary">

    <android.support.v4.view.ViewPager
        android:id="@+id/intro_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/intro_container"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="bottom"
        android:background="@color/introInfoBackground">

        <Button
            android:id="@+id/intro_btn_close"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:text="@string/intro_btn_close_label" />
    </FrameLayout>
</com.dgse.my_rib_app.root.intro.IntroView>